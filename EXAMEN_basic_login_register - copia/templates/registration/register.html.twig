{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}



{% block body %}

    <style>
        .register-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        .register-container h1 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        .form-control {
            width: 80%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .btn-primary {
            width: 85%;
            background: red;
            border: none;
            color: white;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
        }
        .btn-primary:hover {
            background: darkred;
        }
        .alert-danger {
            color: white;
            background: red;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
        }
        .link-back{
            margin: 10px;
            padding: 10px;
            color: gray;
            margin-top: 30px;
        }
        .link-back:hover{
            color: red;
        }
    </style>

    <div class="register-container">
        <h1>Registro</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn-primary">Dar de alta</button>
            <br><br>
            <a class="link-back" href="{{ path('app_login') }}"> Volver a Login</a>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}